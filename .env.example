# Database DSN (SQLAlchemy format)
DB_DSN=mysql+mysqldb://app:app@mysql:3306/inboxbrain

# IMAP settings (universal provider: Gmail, Yahoo, Outlook, etc.)
IMAP_HOST=imap.mail.yahoo.com
IMAP_USER=you@example.com
IMAP_PASS=app-password
IMAP_MAILBOX=INBOX

# Labels for 'runs' checkpoints
PROVIDER_LABEL=imap
MAILBOX_LABEL=you@example.com

# OpenAI
OPENAI_API_KEY=sk-your-key
OPENAI_MODEL=gpt-4o-mini

# App role: ingestor, worker, api or combo (ingestor,worker,api)
APP_ROLE=combo

# API auth (optional simple token for demo)
API_TOKEN=changeme
